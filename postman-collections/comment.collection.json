{
  "info": {
    "name": "Comment API",
    "description": "Comment endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:4000",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "user_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "post_id",
      "value": "656000000000000000000001",
      "type": "string"
    },
    {
      "key": "conversation_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "other_user_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "audit_log_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "refund_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Create Comment",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"content\": \"Đẹp quá!\",\n  \"parentCommentId\": null,\n  \"mentions\": []\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/posts/{{post_id}}/comment",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "posts",
            "{{post_id}}",
            "comment"
          ]
        }
      }
    },
    {
      "name": "Get Post Comments",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/posts/{{post_id}}/comments?page=1&limit=20",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "posts",
            "{{post_id}}",
            "comments"
          ],
          "query": [
            {
              "key": "page",
              "value": "1"
            },
            {
              "key": "limit",
              "value": "20"
            }
          ]
        }
      }
    },
    {
      "name": "Delete Comment",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/comments/:commentId",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "comments",
            ":commentId"
          ],
          "variable": [
            {
              "key": "commentId",
              "value": "657000000000000000000001"
            }
          ]
        }
      }
    }
  ]
}