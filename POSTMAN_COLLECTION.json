              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"base64Image\": \"data:image/jpeg;base64,\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/api/posts/suggest-caption",
              "host": ["{{base_url}}"],
              "path": ["api", "posts", "suggest-caption"]
